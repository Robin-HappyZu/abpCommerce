@model HappyZu.CloudStore.FAQ.Dto.CreateDetailInput
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-edit"></i> 编辑用户角色
        </div>
    </div>
    <div class="portlet-body form form-horizontal">
        <div class="form-body">

            <div class="form-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="@Html.IdFor(m=>m.Title)">帮助主题</label>
                            <div class="col-md-9">
                                <input class="form-control" id="@Html.IdFor(m => m.Title)" name="@Html.NameFor(m => m.Title)" type="text" data-bind="value:Title" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="@Html.IdFor(m=>m.CategoryId)">分类</label>
                            <div class="col-md-9">
                                <input class="form-control" id="@Html.IdFor(m => m.CategoryId)" name="@Html.NameFor(m => m.CategoryId)" type="text" data-bind="value:CategoryId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="@Html.IdFor(m=>m.Discription)">帮助内容</label>
                            <div class="col-md-9">
                                <textarea class="form-control" id="@Html.IdFor(m => m.Discription)" name="@Html.NameFor(m => m.Discription)" data-bind="value:Discription">
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="@Html.IdFor(m=>m.Sort)">排序</label>
                            <div class="col-md-9">
                                <input class="form-control" id="@Html.IdFor(m => m.Sort)" name="@Html.NameFor(m => m.Sort)" type="text" data-bind="value:Sort" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions fluid">
            <div class="col-md-8">
                <div class="col-md-offset-3 col-md-9">
                    <button data-loading-text="正在保存..." data-bind="click:submit" class="btn green" type="button" name="submit.Save" value="submit.Save">保存</button>
                    <a id="button-cancel" data-bind="visible:ReturnUrl().length>0" href="@Request["ReturnUrl"]" class="btn default">取消</a>
                </div>
            </div>
        </div>
    </div>

</div>
<input id="returnUrl" name="returnUrl" type="hidden" data-bind="value:ReturnUrl" />
