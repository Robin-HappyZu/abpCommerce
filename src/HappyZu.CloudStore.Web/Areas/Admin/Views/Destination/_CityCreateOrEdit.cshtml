@model HappyZu.CloudStore.Web.Areas.Admin.Models.EditDestCityViewModel
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-edit"></i> @(Model.Province.Name)目的地城市
        </div>
    </div>
    <div class="portlet-body form form-horizontal">
        <div class="form-body">

            <div class="form-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="@Html.IdFor(m=>m.Province.Name)">目的地范围</label>
                            <div class="col-md-9">
                                <p class="form-control-static">
                                    @Model.Province.Name
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="@Html.IdFor(m=>m.City.Name)">城市</label>
                            <div class="col-md-9">
                                <input class="form-control" id="@Html.IdFor(m => m.City.Name)" name="@Html.NameFor(m => m.City.Name)" type="text" data-bind="value:Name" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions fluid">
            <div class="col-md-8">
                <div class="col-md-offset-3 col-md-9">
                    <button data-loading-text="正在保存..." data-bind="click:submit" class="btn green" type="button" name="submit.Save" value="submit.Save">保存</button>
                    <a id="button-cancel" data-bind="visible:ReturnUrl().length>0" href="@Request["ReturnUrl"]" class="btn default">取消</a>
                </div>
            </div>
        </div>
    </div>

</div>
<input id="returnUrl" name="returnUrl" type="hidden" data-bind="value:ReturnUrl" />
