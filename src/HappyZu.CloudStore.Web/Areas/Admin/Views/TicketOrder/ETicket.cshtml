@using HappyZu.CloudStore.Trip
@{
    ViewBag.Title = "电子票";
}

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Dashboard",new {area="Admin"},true)">控制面板</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>@ViewBag.Title</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="zone zone-content">
            <div class="portlet solid no-padding portlet-box">
                <div class="portlet-title">
                    <div class="caption">
                        @ViewBag.Title
                    </div>

                </div>
                <div class="portlet-body portlet-search">
                    <div class="portlet light bordered ">
                        <div class="portlet-body">
                            <form action="#" class="form-horizontal">
                                <div class="form-body">
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">电子票编号</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" id="SerialNo" />
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">订单编号</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" id="TicketOrderId">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-2">
                                            <div class="form-actions">
                                                <button class="btn green btn-block" id="btnSearch">搜索</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/row-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-body">
                <div class="table-container">
                    <table class="table table-striped table-bordered table-hover table-checkable" id="datatable_ajax">
                        <thead>
                            <tr class="heading">
                                <th scope="col"><input class="group-checkable" type="checkbox"></th>
                                <th scope="col">编号</th>
                                <th scope="col">门票</th>
                                <th scope="col">订单编号</th>
                                <th scope="col">是否核销</th>
                                <th scope="col">核销时间</th>
                                <th scope="col">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section script_plugins{
    <script src="~/Areas/Admin/content/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/moment.min.js"></script>
}

@section scripts{
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script>
        var grid = new Datatable();

        jQuery(document).ready(function() {
            grid.init({
                src: $("#datatable_ajax"),
                loadingMessage: '正在加载...',
                dataTable: {
                    "bStateSave": true, // save datatable state(pagination, sort, etc) in cookie.
                    "lengthMenu": [
                        [10, 20, 50, 100, 150, -1],
                        [10, 20, 50, 100, 150, "All"] // change per page values here
                    ],
                    "pageLength": 10, // default record count per page
                    "ajax": {
                        "url": "@Url.Action("GetETickets", "TicketOrder", new {area = "Admin"}, true)", // ajax source
                    },
                    "columns": [
                        { "data": "Id" },
                        { "data": "SerialNo" },
                        { "data": "TicketName" },
                        { "data": "TicketOrderId" },
                        { "data": "IsChecked" },
                        { "data": "CheckedOn" }
                    ],
                    "columnDefs": [
                        {
                            orderable: false, //禁用排序
                            targets: [0, 1, 2, 3] //指定的列
                        }, {
                            render: function(data, type, row) {
                                return '<input type="checkbox" name="id[]" value="' + data + '">';
                            },
                            targets: 0
                        }, {
                            render: function(data, type, row) {
                                return moment(data).format('YYYY-MM-DD hh:mm:ss');
                            },
                            targets: 5
                        }, {
                            render: function(data, type, row) {
                                var btns = '<a class="btn btn-sm btn-outline blue" href="#Order-Detail" data-id="' + row.Id + '" data-toggle="modal">详情</a> ';
                                return btns;
                            },
                            targets: 6
                        }
                    ],
                    "order": [
                    ] // set first column as a default sort by asc
                }
            });

            $("#btnSearch").click(function() {
                grid.setAjaxParam("SerialNo", $("#SerialNo").val());
                grid.setAjaxParam("TicketOrderId", $("#TicketOrderId").val());
                grid.getDataTable().ajax.reload();
                //grid.clearAjaxParams();
            });
        });
    </script>
<!-- END PAGE LEVEL SCRIPTS -->
}
