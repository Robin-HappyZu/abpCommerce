@using HappyZu.CloudStore.Trip
@{
    ViewBag.Title = "门票订单";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Dashboard",new {area="Admin"},true)">控制面板</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>@ViewBag.Title</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- END PAGE HEADER-->

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="zone zone-content">
            <div class="portlet solid no-padding portlet-box">
                <div class="portlet-title">
                    <div class="caption">
                        @ViewBag.Title
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-body">
                <div class="table-container">
                    <table class="table table-striped table-bordered table-hover table-checkable" id="datatable_ajax">
                        <thead>
                            <tr class="heading">
                                <th scope="col"><input class="group-checkable" type="checkbox"></th>
                                <th scope="col">编号</th>
                                <th scope="col">状态</th>
                                <th scope="col">联系人</th>
                                <th scope="col">电话</th>
                                <th scope="col">邮箱</th>
                                <th scope="col">下单时间</th>
                                <th scope="col">已核销</th>
                                <th scope="col">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal container fade" id="Order-Detail" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">订单详情</h4>
            </div>
            <div class="modal-body" id="orderitems">
                <div id="itemTable"></div>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            </div>
        </div>
    </div>
</div>

@section script_plugins{
    <script src="~/Areas/Admin/content/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/content/global/plugins/moment.min.js"></script>
}

@section scripts{
    <script>
        var lastTicketOrderId = -1;
        var loadTicketOrderDetail = function(id) {
            var detailUrl = '@Url.Action("OrderDetail", "TicketOrder", new {area = "Admin" }, true)';
            var params = [];
            params.push({ name: "orderId", value: id });
            $.post(detailUrl, params, function (data) {
                var divTable = $('#itemTable');
                divTable.append(data);
            },"text");
        };

        $('#Order-Detail')
            .on('show.bs.modal',
                function(e) {
                    var btn = $(e.relatedTarget),
                        id = btn.data("id");
                    if (lastTicketOrderId != id) {
                        // 请求订单详情页面
                        lastTicketOrderId = id;
                        var divTable = $('#itemTable');
                        divTable.text("");
                        loadTicketOrderDetail(id);
                    }
                });
    </script>

