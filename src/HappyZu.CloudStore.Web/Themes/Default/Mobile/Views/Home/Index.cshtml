            景点门票
        </div>
        <div class="col-25 item">
            <a href="@Url.Action("Index","Customize",new {area="Mobile"},true)"><span class="icon iconfont icon-iconsirenmoshi"></span></a>
            私人定制
        </div>
    </div>
    <div class="space-line"></div>
    <div class="row grid-box grid-box1">
        <div class="col-40 ">
            <h4 class="purple">长沙飞行体验馆</h4>
            <p>梦想不断，飞行不止</p>
            <div class="img-box">
                <img src="~/Themes/Default/Mobile/content/images/p10_130x150.jpg"/>
            </div>
        </div>
        <div class="col-60 col-line-left">
            <div class="row">
                <div class="col-100">
                    <div class="pull-left">
                        <h4 class="red">麦咭乐园</h4>
                        <p>乐享童年</p>
                    </div>
                    <div class="img-box img-w-50">
                        <img src="~/Themes/Default/Mobile/content/images/p1_175x170.jpg"/>
                    </div>
                </div>
                <div class="col-100">
                    <div class="pull-left">
                        <h4 class="blue">环球舱</h4>
                        <p>逃脱平凡生活</p>
                    </div>
                    <div class="img-box img-w-50">
                        <img src="~/Themes/Default/Mobile/content/images/p2_175x170.jpg"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-box-line-title">
        <div class="grid-title">长沙精选</div>
        <div class="back-line"></div>
    </div>
    <div class="list-block media-list">
        <ul data-bind="template: { name: 'ListItemTmpl',
                                  foreach: items,
                                  as: 'item' }">
        </ul>
    </div>
    <div class="infinite-scroll-preloader" data-bind="visible:loading">
        <div class="preloader"></div>
    </div>
</div>


@section scripts{
    <script src="~/Themes/Default/Mobile/content/plugins/knockout-3.4.0.js"></script>
    <script src="~/Themes/Default/Mobile/content/plugins/sui/js/sm-extend.min.js"></script>
    <script id="ListItemTmpl" type="text/html">
        <li>
            <a data-bind="attr:{href:'@Url.Action("Detail","Ticket",new {area="Mobile"},true)/'+item.id}" class="item-travel item-content">
                <div class="item-media">
                    <div class="tip-label" data-bind="text:item.subject">
                    </div>
                    <img data-bind="attr:{src:item.coverImage}" width="80" height="80">
                </div>
                <div class="item-inner">
                    <div class="item-title" data-bind="text:item.title"></div>
                    <div class="item-tags-box">
                        <div class="item-tags" data-bind="template:{name:'ItemTags',foreach:tags,as:'tag'}">
                        </div>
                        <div class="item-tags-after">
                            <span class="item-price" data-bind="text:item.minPrice"></span> 起
                        </div>
                    </div>
                    <div class="item-info">
                        <div class="item-info-sales">月销:<span data-bind="text:item.displayOrder"></span></div>
                        <div class="item-info-comments"></div>
                    </div>
                </div>
            </a>
        </li>
    </script>
    <script id="ItemTags" type="text/html">
        <label class="tag" data-bind="text:tag.name"></label>
    </script>
    <script>

        // 最多可加载的条目
        var maxItems = 100;
        // 每次加载添加多少条目
        var itemsPerLoad = 20;


        var ViewModel = function() {
            var _this = this;
            this.loading = ko.observable(false);
            this.items = ko.observableArray([]);

            this.loadData = function(length, start) {
                // 如果正在加载，则退出
                if (_this.loading()) return;
                // 设置flag
                _this.loading(true);

                var url = "@Url.Action("GetElites", "Home", new {area = "Mobile"}, true)";
                var params = [];
                params.push({ name: "start", value: start });
                params.push({ name: "length", value: length });
                $.post(url,
                    params,
                    function(data) {
                        // 重置加载flag
                        _this.loading(false);
                        if (data.success) {
                            maxItems = data.result.totalCount;
                            for (var i = 0; i < data.result.items.length; i++) {
                                var item = data.result.items[i];
                                item.tags = ko.observableArray([]);
                                _this.items.push(item);
                            }
                        } else {
                            $.toast("加载失败,请检查网络...");
                        }

                        if (_this.items().length >= maxItems) {
                            // 加载完毕，则注销无限加载事件，以防不必要的加载
                            $.detachInfiniteScroll($('.infinite-scroll'));
                        }

                    },
                    'json');
            }
        }
        var vm = new ViewModel();

        vm.loadData(itemsPerLoad, 0);

        ko.applyBindings(vm);
        $(function() {
            $(".swiper-container")
                .swiper({
                    autoplay: 5000,
                    resistance: true,
                    autoplayDisableOnInteraction:false
                });
        });


        $(document).on('infinite',
           '.infinite-scroll-bottom',
           function () {
               vm.loadData(itemsPerLoad, vm.items().length);
           });

    </script>
}