<div class="content native-scroll">
    <div class="buttons-tab small-tab">
        <a href="#tab1" class="tab-link active button">全部</a>
        <a href="#tab2" class="tab-link button">待付款</a>
        <a href="#tab3" class="tab-link button">已付款</a>
        <a href="#tab4" class="tab-link button">已完成</a>
        <a href="#tab5" class="tab-link button">已退款</a>
    </div>

    <div class="tabs">
        <div id="tab1" data-bind="with:AllTickets" class="tab infinite-scroll infinite-scroll-bottom active">
            <div class="list-block media-list no-margin">
                <ul data-bind="template: { name: 'ListItemTmpl',foreach: items,as: 'item' }"></ul>
            </div>
            <div class="infinite-scroll-preloader" data-bind="visible:loading">
                <div class="preloader"></div>
            </div>
        </div>
        <div id="tab2" data-bind="with:PayingTickets" class="tab infinite-scroll infinite-scroll-bottom">
            <div class="list-block media-list no-margin">
                <ul data-bind="template: { name: 'ListItemTmpl',foreach: items,as: 'item' }"></ul>
            </div>
            <div class="infinite-scroll-preloader" data-bind="visible:loading">
                <div class="preloader"></div>
            </div>
        </div>
        <div id="tab3" data-bind="with:PaidTickets" class="tab infinite-scroll infinite-scroll-bottom">
            <div class="list-block media-list no-margin">
                <ul data-bind="template: { name: 'ListItemTmpl',foreach: items,as: 'item' }"></ul>
            </div>
            <div class="infinite-scroll-preloader" data-bind="visible:loading">
                <div class="preloader"></div>
            </div>
        </div>
        <div id="tab4" data-bind="with:CompletedTickets" class="tab infinite-scroll infinite-scroll-bottom">
            <div class="list-block media-list no-margin">
                <ul data-bind="template: { name: 'ListItemTmpl',foreach: items,as: 'item' }"></ul>
            </div>
            <div class="infinite-scroll-preloader" data-bind="visible:loading">
                <div class="preloader"></div>
            </div>
        </div>
        <div id="tab5" data-bind="with:ReturnedTickets" class="tab infinite-scroll infinite-scroll-bottom">
            <div class="list-block media-list no-margin">
                <ul data-bind="template: { name: 'ListItemTmpl',foreach: items,as: 'item' }"></ul>
            </div>
            <div class="infinite-scroll-preloader" data-bind="visible:loading">
                <div class="preloader"></div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Themes/Default/Mobile/content/plugins/knockout-3.4.0.js"></script>
    <script id="ListItemTmpl" type="text/html">
        <li>
            <div class="item-content small myticket-item">
                <div class="item-inner">
                    <div class="item-title-row">
                        <div class="item-title">
                            <a data-bind="text:destName,attr:{href:'@Url.Action("MyTicketDetail", "Account", new {area = "Mobile"}, true)/'+item.id}">
                            </a>
                        </div>
                        <div class="item-after" data-bind="html:$parent.ActiveBtn($data)">

                        </div>
                    </div>
                    <a data-bind="attr:{href:'@Url.Action("MyTicketDetail", "Account", new {area = "Mobile"}, true)/'+item.id}">
                        <div class="item-subtitle">
                            <span>￥</span><span data-bind="text:totalAmount"></span>
                            <span>共</span><span data-bind="text:count"></span>张
                        </div>
                        <div class="item-status" data-bind="html:$parent.OrderStatus($data)"></div>
                    </a>
                </div>
            </div>
        </li>
    </script>
    <script>

        // 最多可加载的条目
        var maxItems = 10000;
        // 每次加载添加多少条目
        var itemsPerLoad = 20;


        var orderStatus = ['待处理', '待支付', '已支付', '已关闭', '申请退款', '已退款', '已完成'];

        var TicketsList = function(status) {
            var _this = this;
            this.Status = status;
            this.loading = ko.observable(false);
            this.items = ko.observableArray([]);
            this.OrderStatus = function(data) {
                return orderStatus[data.status];
            }
            this.ActiveBtn = function(data) {
                var html = '';
                switch (data.status) {
                case 0:
                    html = '<a href="javascript:;" class="button button-warning button-fill">取消</a>';
                    break;
                case 1:
                    html = '<div class="text-right"><a href="@Url.Action("ticket", "payment", new { area = "mobile" }, true)/'+data.id+'" class="button button-success button-fill">立即支付</a><br/>';
                    html += '<a href="javascript:;" class="button button-warning button-fill">取消</a><div>';
                    break;
                case 2:
                    html = '<a href="javascript:;" class="button button-dark">申请退款</a>';
                    break;
                case 3:
                case 5:
                case 6:
                    html = '<a href="javascript:;" class="button button-danger">删除</a>';
                    break;
                }
                return html;
            }
            this.loadData = function(length, start) {
                // 如果正在加载，则退出
                if (_this.loading()) return;
                // 设置flag
                _this.loading(true);

                var url = "@Url.Action("GetMyTickets", "Account", new {area = "Mobile"}, true)";
                var params = [];
                params.push({ name: "start", value: start });
                params.push({ name: "length", value: length });
                params.push({ name: "status", value: _this.Status });
                $.post(url,
                    params,
                    function(data) {
                        // 重置加载flag
                        _this.loading(false);
                        if (data.success) {
                            maxItems = data.result.totalCount;
                            for (var i = 0; i < data.result.items.length; i++) {
                                var item = data.result.items[i];
                                item.tags = ko.observableArray([]);
                                _this.items.push(item);
                            }
                        } else {
                            $.toast("加载失败,请检查网络...");
                        }

                        if (_this.items().length >= maxItems) {
                            // 加载完毕，则注销无限加载事件，以防不必要的加载
                            $.detachInfiniteScroll($('.infinite-scroll.active'));
                        }

                    },
                    'json');
            }
        }


        var ViewModel = function() {
            this.AllTickets = ko.observable(new TicketsList(''));
            this.PayingTickets = ko.observable(new TicketsList('Paying'));
            this.PaidTickets = ko.observable(new TicketsList('Paid'));
            this.CompletedTickets = ko.observable(new TicketsList('Completed'));
            this.ReturnedTickets = ko.observable(new TicketsList('Returned'));
        }
        var vm = new ViewModel();

        vm.AllTickets().loadData(itemsPerLoad, 0);

        ko.applyBindings(vm);

        $(document)
            .on('infinite',
                '.infinite-scroll-bottom',
                function () {
                    var vmt = null;
                    switch ($(this).find('.infinite-scroll.active').attr('id')) {
                        case 'tab1':
                            vmt = vm.AllTickets();
                            break;
                        case 'tab2':
                            vmt = vm.PayingTickets();
                            break;
                        case 'tab3':
                            vmt = vm.PaidTickets();
                            break;
                        case 'tab4':
                            vmt = vm.CompletedTickets();
                            break;
                        case 'tab5':
                            vmt = vm.ReturnedTickets();
                            break;
                        default:
                            return;
                    }

                    vmt.loadData(itemsPerLoad, vmt.items().length);
                });
        $(function() {
            $(document).one('click', '.buttons-tab .tab-link:nth-child(2)', function (e) {

                vm.PayingTickets().loadData(itemsPerLoad, 0);
            });
            $(document).one('click', '.buttons-tab .tab-link:nth-child(3)', function (e) {

                vm.PaidTickets().loadData(itemsPerLoad, 0);
            });
            $(document).one('click', '.buttons-tab .tab-link:nth-child(4)', function (e) {

                vm.CompletedTickets().loadData(itemsPerLoad, 0);
            });
            $(document).one('click', '.buttons-tab .tab-link:nth-child(5)', function (e) {

                vm.ReturnedTickets().loadData(itemsPerLoad, 0);
            });
        });


    </script>
}