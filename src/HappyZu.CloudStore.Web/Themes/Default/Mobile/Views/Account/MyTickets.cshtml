@section scripts{
    <script src="~/Themes/Default/Mobile/content/plugins/knockout-3.4.0.js"></script>
    <script id="ListItemTmpl" type="text/html">
        <li>
            <a data-bind="attr:{href:'@Url.Action("MyTicketDetail", "Account", new {area = "Mobile"}, true)/'+item.id}" class="item-content item-link">
                <div class="item-inner">
