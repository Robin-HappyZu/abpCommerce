<div class="content native-scroll">
    <div class="customize-banner">
        <img src="~/Themes/Default/Mobile/content/images/dz.jpg"/>
    </div>
    <form id="myform">
        <div class="list-block no-margin">
            <ul>
                <!-- Text inputs -->
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-name"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">目的地</div>
                            <div class="item-input">
                                <input type="text" name="Destination" data-bind="value:Destination" placeholder="目的地城市">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-name"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">出发地</div>
                            <div class="item-input">
                                <input type="text" name="Depart" data-bind="value:Depart" placeholder="出发城市">
                            </div>
                        </div>
                    </div>
                </li> <!-- Date -->
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-calendar"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">出发日期</div>
                            <div class="item-input">
                                <input type="date" name="DepartureTime" data-bind="value:DepartureTime" id="DepartureTime" placeholder="出发时间">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-email"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">游玩天数</div>
                            <div class="item-input">
                                <input type="number" name="Days" data-bind="value:Days" placeholder="天数">
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="list-block margin-top-10">
            <ul>
                <!-- Text inputs -->
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-name"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">联系人</div>
                            <div class="item-input">
                                <input type="text" name="Contact" data-bind="value:Contact" placeholder="联系人">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-name"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">联系手机</div>
                            <div class="item-input">
                                <input type="text" name="Mobile" data-bind="value:Mobile" placeholder="手机号码">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-name"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">电子邮箱</div>
                            <div class="item-input">
                                <input type="email" name="Email" data-bind="value:Email" placeholder="E-mail">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-email"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">目前所在地</div>
                            <div class="item-input">
                                <input type="text" name="Location" data-bind="value:Location" placeholder="目前所在城市">
                            </div>
                        </div>
                    </div>
                </li>
                <li class="align-top">
                    <div class="item-content">
                        <div class="item-media">
                            <i class="icon icon-form-comment"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title label">其他需求</div>
                            <div class="item-input">
                                <textarea name="Remark" data-bind="value:Remark"></textarea>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="content-block">
            <div class="row">
                <div class="col-100">
                    <a href="javascript:;" data-bind="click:SubmitData" class="submit-btn button button-big button-fill button-success">提交定制</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts{
    <script src="~/Themes/Default/Mobile/content/plugins/knockout-3.4.0.js"></script>
    <script src="~/Themes/Default/Mobile/content/plugins/zepto.form.min.js"></script>
    <script>
        var defaultDate = '@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")';
        var today = '@DateTime.Now.ToString("yyyy-MM-dd")';

        var validConfig = {
            Destination: {
                required: '目的地不能为空'
            },
            Depart: {
                required: '出发城市不能为空'
            },
            Days: {
                required: '游玩天数不能为空'
            },
            Contact: {
                required: '联系人不能为空'
            },
            Mobile: {
                required: '手机号码不能为空',
                reg: {
                    exp: /^(0|86|17951)?(13[0-9]|15[012356789]|17[0-9]|18[0-9]|14[57])[0-9]{8}$/,
                    msg: '请输入正确的手机号码'
                }
            },
            Email: {
                required: false,
                reg: {
                    exp: /^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/,
                    msg: '请输入正确的Email地址'
                }
            }
        }

        $("#myform")
            .validate({
                validConf: validConfig,
                touch: true,
                loadingTxt: '正在提交...',
                defaultTxt: '提交定制',
                submitBtn: $('.submit-btn'),
                alertFn: function(msg) {
                    $.alert(msg);
                }, // 弹窗提示函数
                validSuccess: function(json) {
                    var url = '@Url.Action("CreateCustomize", "Customize", new {area = "Mobile"}, true)';
                    $.showPreloader();
                    $.post(url, json, function (data) {
                        if (data.success) {
                            $.alert('定制提交成功！');
                            $('#myform')[0].reset();
                        } else {
                            $.alert(data.error.message, '操作失败!');
                        }
                        $.unlockBtn($('.submit-btn'), '提交定制');
                        $.hidePreloader();
                    }, 'json');
                    //console.log(json);
                }
            });

        var ViewModel = function() {
            var $this = this;
            $this.Destination = ko.observable();
            $this.Depart = ko.observable();
            $this.DepartureTime = ko.observable(defaultDate);
            $this.Days = ko.observable();
            $this.Contact = ko.observable();
            $this.Mobile = ko.observable();
            $this.Email = ko.observable();
            $this.Location = ko.observable();
            $this.Remark = ko.observable();

            $this.SubmitData = function() {
                $('#myform').submit();
            }
        }

        var vm = new ViewModel();

        ko.applyBindings(vm);

        $(function() {
            $("#DepartureTime")
                .calendar({
                    value: [defaultDate],
                    minDate: today
                });
        })
    </script>
}