    <script>

        // 最多可加载的条目
        var maxItems = 100;
        // 每次加载添加多少条目
        var itemsPerLoad = 20;


        var ViewModel = function() {
            var _this = this;
            this.loading = ko.observable(false);
            this.items = ko.observableArray([]);

            this.loadData = function(length, start) {
                // 如果正在加载，则退出
                if (_this.loading()) return;
                // 设置flag
                _this.loading(true);

                var url = "@Url.Action("GetElites", "Home", new {area = "Mobile"}, true)";
                var params = [];
                params.push({ name: "start", value: start });
                params.push({ name: "length", value: length });
                $.post(url,
                    params,
                    function(data) {
                        // 重置加载flag
                        _this.loading(false);
                        if (data.success) {
                            maxItems = data.result.totalCount;
                            for (var i = 0; i < data.result.items.length; i++) {
                                var item = data.result.items[i];
                                item.tags = ko.observableArray([]);
                                _this.items.push(item);
                            }
                        } else {
                            $.toast("加载失败,请检查网络...");
                        }

                        if (_this.items().length >= maxItems) {
                            // 加载完毕，则注销无限加载事件，以防不必要的加载
                            $.detachInfiniteScroll($('.infinite-scroll'));
                        }

                    },
                    'json');
            }
        }
        var vm = new ViewModel();

        vm.loadData(itemsPerLoad, 0);

        ko.applyBindings(vm);

        $(document)
            .on('infinite',
                '.infinite-scroll-bottom',
                function() {
                    vm.loadData(itemsPerLoad, vm.items().length);
                });

        var $win = $(window), lastScrollPos = 0;
        var lastScrollPos = 0;

        var checkScrollPosition = function(domain) {
            var $this = $(domain);
            var scrollTop = $this.scrollTop();
            if (lastScrollPos !== scrollTop) {
                if (lastScrollPos > scrollTop) {
                    $win.trigger('scrollUp', lastScrollPos);
                } else {
                    $win.trigger('scrollDown', lastScrollPos);
                }
                lastScrollPos = scrollTop;
            }
            console.debug(lastScrollPos);
        };

        $(function() {
            $('.native-scroll')
                .on('touchstart',
                    function() {
                        checkScrollPosition('.native-scroll');

                        setTimeout("checkScrollPosition('.native-scroll')", 500);
                    });

            $(window)
                .on('scrollUp',
                    function() {
                        if ($('.h-choose').hasClass('hide')) {
                            $('.h-choose').removeClass('hide');
                        }
                        if ($('.data-choose').hasClass('hide')) {
                            $('.data-choose').removeClass('hide');
                        }
                    });

            $(window)
                .on('scrollDown',
                    function() {
                        if (!$('.h-choose').hasClass('hide')) {
                            $('.h-choose').addClass('hide');
                        }
                        if (!$('.data-choose').hasClass('hide')) {
                            $('.data-choose').addClass('hide');
                        }
                    });
        });
    </script>
}